<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script>
      // Auto-refresh the page every 60 seconds
      document.addEventListener('DOMContentLoaded', function() {
        setInterval(function() {
          window.location.reload();
        }, 60000);
      });
    </script>
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
      <nav>
        <ul>
          <li><a href="/products" class="btn btn-success">Add Product</a></li>
          <li>
            <form action="/users/logout" method="post">
              <button type="submit" class="btn btn-danger">Logout</button>
            </form>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <section>
        <h2>Welcome back!</h2>
        <p>You have just logged in.</p>
        <%- products_table %> 
      </section>
    </main>
    <footer>
      <p>&copy; 2024 <%= title %></p>
    </footer>
  </body>
</html>